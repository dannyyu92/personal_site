<h3>Post a Comment</h3>

<%= form_for([@article, @comment]) do |f| %>

	<div class="field">
		<%= f.text_field :name, placeholder: "Your name", style: "width:300px	" %>
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder: "Your comment", style: "width:80%; height:150px;" %>
	</div>
	<div class="actions">
		<%= f.submit "Submit", class: "btn btn-primary" %>
	</div>
<% end %>