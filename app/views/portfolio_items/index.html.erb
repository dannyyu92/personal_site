<div class="row-fluid">
	<% @portfolio_items.each do |portfolio_item| %>
	<hr class='featurette-divider'>

    <div class="span5">
      <%= image_tag portfolio_item.portfolio_image_url(:thumb).to_s %>
    </div>
    <div class="span6">
	    <h1><%= portfolio_item.title %></h1>
	    <p class="lead"><%= portfolio_item.description %></p>
	    <%= link_to 'Show', portfolio_item %>
			<%= link_to 'Edit', edit_portfolio_item_path(portfolio_item) %>
			<%= link_to 'Destroy', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
	  </div>
</div>





<% end %>

<br />

<%= link_to 'New Portfolio item', new_portfolio_item_path %>
