<% provide(:title, "Blog") %>

<hr class='featurette-divider'>
<h1>Articles</h1>

<div class="row">
  <div class="span12">
    <ul class="thumbnails">
      <% @articles.each do |article| %>
        <li class="span4">
          <div class="thumbnail">
            <%= link_to image_tag(article.article_image_url(:thumb).to_s), article %>
            <h3><%= article.title %></h3>  
            <%= article.published_at.to_formatted_s(:long) %>
            <%= link_to 'Show', article %>
            <%= link_to 'Edit', edit_article_path(article) %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>  
</div>

<br />

<%= link_to 'New Article', new_article_path %>
